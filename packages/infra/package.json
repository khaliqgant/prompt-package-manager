{
  "name": "@prpm/infra",
  "version": "1.0.0",
  "description": "Pulumi Infrastructure as Code for PRPM Registry",
  "main": "index.ts",
  "scripts": {
    "build": "tsc --noEmit",
    "validate": "tsc --noEmit",
    "provision": "./scripts/provision-infrastructure.sh",
    "provision:dev": "./scripts/provision-infrastructure.sh dev",
    "provision:staging": "./scripts/provision-infrastructure.sh staging",
    "provision:prod": "./scripts/provision-infrastructure.sh prod",
    "precheck": "./scripts/pre-deploy-check.sh",
    "test": "echo 'No unit tests for infrastructure - use npm run preview to validate'",
    "test:preview": "./scripts/test-preview.sh",
    "preview": "npm run precheck && pulumi preview --diff",
    "preview:json": "pulumi preview --json > preview-output.json",
    "up": "npm run precheck && pulumi up",
    "up:yes": "npm run precheck && pulumi up --yes",
    "destroy": "pulumi destroy",
    "destroy:yes": "pulumi destroy --yes",
    "refresh": "pulumi refresh",
    "stack:init:dev": "pulumi stack init dev",
    "stack:init:staging": "pulumi stack init staging",
    "stack:init:prod": "pulumi stack init prod",
    "stack:select:dev": "pulumi stack select dev",
    "stack:select:staging": "pulumi stack select staging",
    "stack:select:prod": "pulumi stack select prod",
    "stack:export": "pulumi stack export > stack-backup-$(date +%Y%m%d-%H%M%S).json",
    "stack:import": "pulumi stack import --file",
    "config:set": "pulumi config set",
    "config:list": "pulumi config",
    "config:get": "pulumi config get",
    "outputs": "pulumi stack output",
    "outputs:json": "pulumi stack output --json",
    "logs": "pulumi logs --follow",
    "cancel": "pulumi cancel"
  },
  "keywords": [
    "pulumi",
    "infrastructure",
    "aws",
    "iac"
  ],
  "author": "khaliqgant",
  "license": "MIT",
  "dependencies": {
    "@pulumi/aws": "^6.18.2",
    "@pulumi/awsx": "^2.4.0",
    "@pulumi/docker": "^4.5.1",
    "@pulumi/pulumi": "^3.104.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.25",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "private": true
}
